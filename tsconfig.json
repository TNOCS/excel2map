{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "./public/app/*.ts",
    "./public/modals/*.ts",
    "./public/widgets/*.ts",
    "./public/translations/*.ts",
    "./node_modules/@types/**/*.d.ts",
    "./server.ts"
  ],
  "files": [
    "./public/bower_components/csweb/dist-bower/csComp.d.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "../csWeb/out/**/*.*",
    "./node_modules/**/*.ts",
    "./node_modules/**/*.d.ts",
    "./dist/**/*.*",
    "./public/bower_components/**/*.d.ts"
  ]
}